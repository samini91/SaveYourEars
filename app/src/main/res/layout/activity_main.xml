<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liftingpump.liftingpump.MainActivity">

    <EditText
        android:id="@+id/timerValueEditText"
        android:layout_width="79dp"
        android:layout_height="47dp"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.609"

        />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="197dp"
        app:layout_constraintBottom_toBottomOf="@id/timerValueEditText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <SeekBar
        android:id="@+id/minVolBar"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/timerValueEditText"
        app:layout_constraintEnd_toEndOf="@+id/timerValueEditText"
        app:layout_constraintStart_toStartOf="@+id/timerValueEditText"

        app:layout_constraintHorizontal_bias="0.391"/>

    <SeekBar
        android:id="@+id/maxVolBar"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/minVolBar"
        app:layout_constraintEnd_toEndOf="@+id/minVolBar"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="@+id/minVolBar"
        app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
        android:id="@+id/minVolumeTextView"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Min Volume"
        app:layout_constraintEnd_toStartOf="@+id/minVolBar"
        app:layout_constraintTop_toTopOf="@+id/minVolBar"
        tools:text="Min Volume"
        tools:textSize="10sp"/>

    <TextView
        android:id="@+id/maxVolumeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Max Volume"
        app:layout_constraintEnd_toStartOf="@+id/maxVolBar"
        app:layout_constraintTop_toTopOf="@+id/maxVolBar"
        tools:text="Max Volume"
        tools:textSize="10sp"/>

</android.support.constraint.ConstraintLayout>
